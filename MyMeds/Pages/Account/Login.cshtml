@page
@model MyMeds.Pages.Account.LoginModel
@{
}

@{
    ViewData["Title"] = "Log in";
}

@if (!User.Identity.IsAuthenticated)
{
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <hr/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Credential.UserName" class="form-control" autocomplete="username" aria-required="true"/>
                        <label asp-for="Credential.UserName" class="form-label"></label>
                        <span asp-validation-for="Credential.UserName" class="text-danger"></span>
                    </div>
                    <br/>
                    <div class="form-floating">
                        <input asp-for="Credential.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                        <label asp-for="Credential.Password" class="form-label"></label>
                        <span asp-validation-for="Credential.Password" class="text-danger"></span>
                    </div>
                    <hr/>
                    <div>
                        <button id="login-submit" type="submit" class="w-75 btn btn-lg btn-primary">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
}
else
{
    <div>
        <a>You're already logged in. Please sign in with another account if this is in error.</a>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}